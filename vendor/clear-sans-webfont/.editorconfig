# editorconfig.org

root = true

[*]
# `end_of_line` is removed, as we've already set Git to automatically handle
# line endings from the `.gitattributes` file.
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[*.rb]
indent_style = space
indent_size = 4
